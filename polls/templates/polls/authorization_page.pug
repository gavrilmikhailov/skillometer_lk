html(lang='ru')
    head
        meta(charset='UTF-8')
        title Skillometer - Вход
        meta(name='viewport', content='width=device-width')
        link(rel='icon', type='image/png', href='/static/assets/favicon.png')
        link(rel='stylesheet', href='/static/styles/index.css')
    body
        .authorization-form.center
            form(method="POST")
                .form-window
                    .left
                        .title
                            p Войдите в личный
                            p кабинет
                        img(src="/static/assets/sign-in-background.svg")
                    .right
                        .title АВТОРИЗАЦИЯ
                        .input-block
                            label Электронная почта
                            input(type="text")
                        .input-block
                            label Пароль
                            input(type="text")
                        button.sign-button.center(type="submit") Войти
                        a.sign-button.center(href="") Регистрация
                        a.forgot-link.center(href="") Забыли пароль?
